{
    "manifest_version":2,
    "name": "Pomodoro Chrome Extension",
    "description": "Build a chrome extension that implements the Pomodoro Technique",
    "version":"1",
    "author":"Jesse Yentsch",
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "browser_action":{
        "default_popup": "popup.html"
    },
    "background": {
        "persistent" : true,
        "scripts" : ["background.js"]
    }
}